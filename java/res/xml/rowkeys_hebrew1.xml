<merge
    xmlns:latin="http://schemas.android.com/apk/res/com.android.inputmethod.latin"
>
    <switch>
        <case
            latin:mode="email|url"
        >
            <Key
                latin:keySpec="-"
                latin:keyHintLabel="!text/keyspec_left_curly_bracket"
                latin:additionalMoreKeys="!text/keyspec_left_curly_bracket" />
            <Key
                latin:keySpec="_"
                latin:keyHintLabel="!text/keyspec_right_curly_bracket"
                latin:additionalMoreKeys="!text/keyspec_right_curly_bracket"/>
        </case>
        <default>
            <Key
                latin:keySpec="\'"
                latin:keyHintLabel="!text/keyspec_left_curly_bracket"
                latin:additionalMoreKeys="!text/keyspec_left_curly_bracket"
                latin:moreKeys="&quot;" />
            <Key
                latin:keySpec="-"
                latin:keyHintLabel="!text/keyspec_right_curly_bracket"
                latin:additionalMoreKeys="!text/keyspec_right_curly_bracket"
                latin:moreKeys="_" />
        </default>
    </switch>
    <!-- U+05E7: "ק" HEBREW LETTER QOF -->
    <Key
        latin:keySpec="&#x05E7;"
        latin:keyHintLabel="~"
        latin:additionalMoreKeys="~" />
    <!-- U+05E8: "ר" HEBREW LETTER RESH -->
    <Key
        latin:keySpec="&#x05E8;"
        latin:keyHintLabel="|"
        latin:additionalMoreKeys="|" />
    <!-- U+05D0: "א" HEBREW LETTER ALEF -->
    <Key
        latin:keySpec="&#x05D0;"
        latin:keyHintLabel="\\"
        latin:additionalMoreKeys="\\" />
    <!-- U+05D8: "ט" HEBREW LETTER TET -->
    <Key
        latin:keySpec="&#x05D8;"
        latin:keyHintLabel="="
        latin:additionalMoreKeys="=" />
    <!-- U+05D5: "ו" HEBREW LETTER VAV -->
    <Key
        latin:keySpec="&#x05D5;"
        latin:keyHintLabel="÷"
        latin:additionalMoreKeys="÷" />
    <!-- U+05DF: "ן" HEBREW LETTER FINAL NUN -->
    <Key
        latin:keySpec="&#x05DF;"
        latin:keyHintLabel="×"
        latin:additionalMoreKeys="×"/>
    <!-- U+05DD: "ם" HEBREW LETTER FINAL MEM -->
    <Key
        latin:keySpec="&#x05DD;"
        latin:keyHintLabel="["
        latin:additionalMoreKeys="[" />
    <!-- U+05E4: "פ" HEBREW LETTER PE -->
    <Key
        latin:keySpec="&#x05E4;"
        latin:keyHintLabel="]"
        latin:additionalMoreKeys="]" />
</merge>
